<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/product_card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardUseCompatPadding="true"
    card_view:cardCornerRadius="8dp"
    android:layout_marginBottom="16dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/product_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/action_settings"
            android:src="@drawable/nine"
            android:scaleType="centerCrop"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/product_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="@string/hello_world"
            android:textColor="#ffffff"
            android:layout_below="@+id/product_image"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:gravity="center_horizontal"
            android:background="#1976D2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name"
            android:orientation="horizontal"
            android:gravity="center">

        <TextView
            android:id="@+id/product_id_textview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <TextView
            android:id="@+id/price_mrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="13sp"
            android:text="price_mrp"
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:gravity="center_horizontal"
            android:background="#e17494"/>

            <!--<TextView-->
                <!--android:id="@+id/spacer"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:textSize="13sp"-->
                <!--android:text="  |  "-->
                <!--android:textColor="#ffffff"-->
                <!--android:paddingBottom="3dp"-->
                <!--android:paddingTop="3dp"-->
                <!--android:gravity="center_horizontal"-->
                <!--android:background="#e17494"/>-->

            <TextView
                android:id="@+id/price_offer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="price_offer"
                android:layout_weight="1"
                android:textColor="#ffffff"
                android:paddingBottom="3dp"
                android:paddingTop="3dp"
                android:gravity="center_horizontal"
                android:background="#e17494"/>
        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>