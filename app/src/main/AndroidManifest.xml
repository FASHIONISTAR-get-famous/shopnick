<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.theleafapps.shopnick">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/MyMaterialTheme">
        <activity android:name=".ui.MainActivity" />
        <activity android:name=".ui.ShowcaseActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.ProductListActivity"
            android:parentActivityName=".ui.ShowcaseActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.ShowcaseActivity" />
        </activity>

        <activity
            android:name=".ui.ProductDetailActivity"
            android:parentActivityName=".ui.ProductListActivity">
        <meta-data
            android:name="android.support.PARENT_ACTIVITY"
            android:value=".ui.ProductListActivity" />
    </activity>

        <activity android:name=".ui.CheckoutActivity"/>
    </application>

</manifest>